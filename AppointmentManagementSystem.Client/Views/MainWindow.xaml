<Window x:Class="AppointmentManagementSystem.Client.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:AppointmentManagementSystem.Client.Views"
        mc:Ignorable="d"
        Title="{StaticResource WindowTitle}" Height="450" Width="800">
    <DockPanel Margin="10">
        <views:AppointmentInputControl DataContext="{Binding InputAppointment}" DockPanel.Dock="Top"/>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10" DockPanel.Dock="Top">
            <Button Content="{StaticResource BtnAddAppointment}" Command="{Binding AddCommand}" Margin="0,0,10,0"/>
            <Button Content="{StaticResource BtnUpdateAppointment}" Command="{Binding UpdateCommand}" Margin="0,0,10,0"/>
            <Button Content="{StaticResource BtnDeleteAppointment}" Command="{Binding DeleteCommand}"/>
        </StackPanel>

        <TextBlock Text="{Binding ErrorMessage}" DockPanel.Dock="Top" Foreground="Red" FontWeight="SemiBold"/>

        <DataGrid ItemsSource="{Binding Appointments}"
            SelectedItem="{Binding SelectedAppointment}"
            DockPanel.Dock="Top"
            CanUserAddRows="False"
            CanUserDeleteRows="False"
            IsReadOnly="True"
            SelectionMode="Single"
            SelectionUnit="FullRow"
            Focusable="True"
            AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="{StaticResource DgHeaderPatientName}" Binding="{Binding PatientName}"/>
                <DataGridTextColumn Header="{StaticResource DgHeaderTitle}" Binding="{Binding Title}"/>
                <DataGridTextColumn Header="{StaticResource DgHeaderScheduledDate}" Binding="{Binding ScheduledDate, StringFormat=MM/dd/yyyy}"/>
                <DataGridTextColumn Header="{StaticResource DgHeaderDescription}" Binding="{Binding Description}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>
